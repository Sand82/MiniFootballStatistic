@model List<TournamentViewModel>

@{
    ViewData["Title"] = "Tournament FirstStep";
}

<div class="container">
    <h1 style="text-align:center;">Choose your favorite schema.</h1>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="card" style="width: 30%; height:30%; margin: 10px;">
                    <img src="@item.ImageUrl" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name </h5>
                        <p class="card-text">Create new bracket template with @item.PositionCount position for teams.</p>
                        <a asp-controller="Tournament" asp-action="SecondStep" asp-route-positionCount="@item.PositionCount" class="btn btn-primary">Get template</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
